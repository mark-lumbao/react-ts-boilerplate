{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2017",
    "module": "esnext",
    "sourceMap": true,
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom","esnext"],
    "resolveJsonModule": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "public", "**/*spec.ts", "**/*test.ts"]
}
